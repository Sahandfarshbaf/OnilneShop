
@{
    ViewData["Title"] = "فروشنده";
    Layout = "~/Views/Shared/_Shop.cshtml";
}


<div id="container">
    <div class="container">
        <!-- Breadcrumb Start-->
        <ul class="breadcrumb">
            <li><a href="index.html"><i class="fa fa-home"></i></a></li>
            <li><a asp-controller="Account" asp-action="adminLogin">حساب کاربری</a></li>
            <li><a asp-controller="Account" asp-action="Register">ثبت نام</a></li>
        </ul>
        <!-- Breadcrumb End-->
        <div class="row">
            <!--Middle Part Start-->
            <div class="col-sm-12" id="content">
                <h1 class="title">ثبت نام فروشنده</h1>
                <p>اگر قبلا حساب کاربریتان را ایجاد کرد اید جهت ورود به <a asp-controller="Account" asp-action="adminLogin">صفحه لاگین</a> مراجعه کنید.</p>
                <form class="form-horizontal" >
                    <fieldset id="account">
                        <legend>اطلاعات شخصی شما</legend>
                        <div style="display: none;" class="form-group required">
                            <label class="col-sm-2 control-label">گروه فروشنده</label>
                            <div class="col-sm-10">
                                <div class="radio">
                                    <label>
                                        <input type="radio" checked="checked" value="1" name="customer_group_id">
                                        پیشفرض
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group required">
                            <label id="FirstName" class="col-sm-2 control-label">نام</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="input-firstname" placeholder="نام">
                                <span class="text-danger"></span>
                            </div>
                        </div>


                        <div class="form-group required">
                            <label id="LastName" for="input-lastname" class="col-sm-2 control-label">نام خانوادگی</label>
                            <div class="col-sm-10">
                                <input id="LastName" type="text" class="form-control" placeholder="نام خانوادگی">
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label id="codeMeli" for="input-lastname" class="col-sm-2 control-label">کد ملی</label>
                            <div class="col-sm-10">
                                <input id="NumbercodeMeli" type="text" class="form-control" placeholder="کد ملی">
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label id="PhoneNumber" for="input-lastname" class="col-sm-2 control-label">شماره موبایل</label>
                            <div class="col-sm-10">
                                <input id="PhoneNumber" type="text" class="form-control" placeholder="شماره موبایل">
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label id="FaileZamime" for="input-email" class="col-sm-2 control-label">عکس پروفایل</label>
                            <div class="col-sm-10"><span id="FaileZamime1" class="text-danger"></span></div>

                            <input id="FaileZamime" type="file" />

                        </div>
                        <div class="form-group required">
                            <label id="codePosti" for="input-lastname" class="col-sm-2 control-label">کد پستی</label>
                            <div class="col-sm-10">
                                <input id="NumbercodePosti" type="text" class="form-control" placeholder="کد پستی">
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label id="address1" for="input-lastname" class="col-sm-2 control-label">آدرس</label>
                            <div class="col-sm-10">
                                <input id="address" type="text" class="form-control" placeholder="آدرس">
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label id="Email" for="input-email" class="col-sm-2 control-label">آدرس ایمیل</label>
                            <div class="col-sm-10">
                                <input id="Email" type="email" class="form-control" placeholder="آدرس ایمیل">
                                <span class="text-danger"></span>
                            </div>
                        </div>

                    </fieldset>

                    <fieldset>
                        <legend>رمز عبور شما</legend>
                        <div class="form-group required">
                            <label id="Password" for="input-password" class="col-sm-2 control-label">رمز عبور</label>
                            <div class="col-sm-10">
                                <input id="Password" type="password" class="form-control"  placeholder="رمز عبور">
                                <span  class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label id="ConfirmPassword" for="input-confirm" class="col-sm-2 control-label">تکرار رمز عبور</label>
                            <div class="col-sm-10">
                                <input id="ConfirmPassword" type="password" class="form-control"  placeholder="تکرار رمز عبور">
                                <span  class="text-danger"></span>
                            </div>
                        </div>
                    </fieldset>
                    <div class="buttons">
                        <div class="pull-right">
                            <input type="checkbox" value="1" name="agree">
                            &nbsp;من <a class="agree" href="#"><b>سیاست حریم خصوصی</b> را خوانده ام و با آن موافق هستم</a> &nbsp;
                            <input type="submit" class="btn btn-primary" value="ادامه">
                        </div>
                    </div>
                </form>

            </div>
