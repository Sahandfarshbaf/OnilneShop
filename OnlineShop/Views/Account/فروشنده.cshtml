@using Microsoft.AspNetCore.Razor.TagHelpers
@model Entities.BusinessModel.UserRegistrationModel
@{
    ViewData["Title"] = "فروشنده";
    Layout = "~/Views/Shared/_Shop.cshtml";
}


<div id="container">
    <div class="container">
        <!-- Breadcrumb Start-->
        <ul class="breadcrumb">
            <li><a href="index.html"><i class="fa fa-home"></i></a></li>
            <li><a asp-controller="Account" asp-action="adminLogin">حساب کاربری</a></li>
            <li><a asp-controller="Account" asp-action="Register">ثبت نام</a></li>
        </ul>
        <!-- Breadcrumb End-->
        <div class="row">
            <!--Middle Part Start-->
            <div class="col-sm-12" id="content">
                <h1 class="title">ثبت نام فروشنده</h1>
                <p>اگر قبلا حساب کاربریتان را ایجاد کرد اید جهت ورود به <a asp-controller="Account" asp-action="adminLogin">صفحه لاگین</a> مراجعه کنید.</p>
                <form class="form-horizontal" asp-controller="Account" asp-action="فروشنده">
                    <fieldset id="account">
                        <legend>اطلاعات شخصی شما</legend>
                        <div style="display: none;" class="form-group required">
                            <label class="col-sm-2 control-label">گروه فروشنده</label>
                            <div class="col-sm-10">
                                <div class="radio">
                                    <label>
                                        <input type="radio" checked="checked" value="1" name="customer_group_id">
                                        پیشفرض
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group required">
                            <label asp-for="FirstName" class="col-sm-2 control-label">نام</label>
                            <div class="col-sm-10">
                                <input asp-for="FirstName" type="text" class="form-control" id="input-firstname" placeholder="نام">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label asp-for="LastName" for="input-lastname" class="col-sm-2 control-label">نام خانوادگی</label>
                            <div class="col-sm-10">
                                <input asp-for="LastName" type="text" class="form-control" id="input-lastname" placeholder="نام خانوادگی">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label asp-for="NationalCode" for="input-lastname" class="col-sm-2 control-label">کد ملی</label>
                            <div class="col-sm-10">
                                <input  asp-for="NationalCode" type="text" id="NumbercodeMeli"  class="form-control" placeholder="کد ملی">
                                <span asp-validation-for="NationalCode" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label  asp-for="PhoneNumber"  for="input-lastname" class="col-sm-2 control-label">شماره موبایل</label>
                            <div class="col-sm-10">
                                <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="شماره موبایل">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group required">
                            <label asp-for="Email" for="input-email" class="col-sm-2 control-label">آدرس ایمیل</label>
                            <div class="col-sm-10">
                                <input asp-for="Email" type="email" class="form-control" id="input-email" placeholder="آدرس ایمیل">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                    </fieldset>

                    <fieldset>
                        <legend>رمز عبور شما</legend>
                        <div class="form-group required">
                            <label asp-for="Password" for="input-password" class="col-sm-2 control-label">رمز عبور</label>
                            <div class="col-sm-10">
                                <input asp-for="Password" type="password" class="form-control" id="input-password" placeholder="رمز عبور">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required">
                            <label asp-for="ConfirmPassword" for="input-confirm" class="col-sm-2 control-label">تکرار رمز عبور</label>
                            <div class="col-sm-10">
                                <input asp-for="ConfirmPassword" type="password" class="form-control" id="input-confirm" placeholder="تکرار رمز عبور">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </fieldset>
                    <div class="buttons">
                        <div class="pull-right">
                            <input type="checkbox" value="1" name="agree">
                            &nbsp;من <a class="agree" href="#"><b>سیاست حریم خصوصی</b> را خوانده ام و با آن موافق هستم</a> &nbsp;
                            <input type="submit" class="btn btn-primary" value="ادامه">
                        </div>
                    </div>
                </form>

            </div>

        </div>
    </div>
</div>

