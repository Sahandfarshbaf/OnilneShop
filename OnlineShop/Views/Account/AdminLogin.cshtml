
@model Entities.BusinessModel.UserLoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "login";
    Layout = "~/Views/Shared/_Shop.cshtml";
}
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>





    <meta name="viewport" content="width=device-width" />
    <title>login</title>
    <meta charset="utf-8" />
    <title>بازارچه صنایع دستی آذربایجان</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="A premium admin dashboard template by Mannatthemes" name="description" />
    <meta content="Mannatthemes" name="author" />

    <!-- App favicon -->
    <link rel="shortcut icon" href="assets/images/favicon.ico">
    <link href="~/Admin/login/bootstrap.min.css" rel="stylesheet" />
    <!-- App css -->
    @*<link href="~/Admin/dist/css/bootstrap-rtl.min.css" rel="stylesheet" />*@

    @*<link href="~/Admin/login/icons.css" rel="stylesheet" />
        <link href="~/Admin/login/metisMenu.min.css" rel="stylesheet" />*@

<link href="~/Admin/login/style.css" rel="stylesheet" />

</head>
<body class="account-body accountbg"  style="background-image: url("~/images/Newfolder/coming-soon990526.jpg");">
 
    <!-- Log In page -->
    <div class="row vh-100 ">
        <div class="col-12 align-self-center">
            <div class="auth-page">
                <div class="card auth-card shadow-lg">
                    <div class="card-body">
                        <div class="px-3">
                            <div class="auth-logo-box">
                                
                                <a   class="logo logo-admin"><img src="~/image/logotype1.png" height="55" alt="logo" class="auth-logo"></a>
                            </div><!--end auth-logo-box-->

                            <div class="text-center auth-logo-text">
                                <h4 class="mt-0 mb-3 mt-5">ورود به پنل مدیریتی</h4>
                            </div> <!--end auth-logo-text-->

                            <form asp-controller="Account" asp-action="AdminLogin"  asp-route-returnUrl="@ViewData["ReturnUrl"]">

                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Email" for="username">نام کاربری</label>
                                    <div class="input-group mb-3">
                                        <span class="auth-form-icon">
                                            <i class="dripicons-user"></i>
                                        </span>
                                        <input asp-for="Email" type="email" class="form-control" id="username" placeholder="نام کاربری را وارد کنید">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div><!--end form-group-->

                                <div class="form-group">
                                    <label asp-for="Password" for="userpassword">کلمه عبور</label>
                                    <div class="input-group mb-3">
                                        <span class="auth-form-icon">
                                            <i class="dripicons-lock"></i>
                                        </span>
                                        <input asp-for="Password" type="password" class="form-control" id="userpassword" placeholder="کلمه عبور را وارد کنید">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div><!--end form-group-->

                                <div class="form-group row mt-4">
                                    <div class="col-sm-6">
                                        <div class="custom-control custom-switch switch-success">
                                            <input type="checkbox" class="custom-control-input" id="customSwitchSuccess" asp-for="RememberMe">
                                            <label class="custom-control-label text-muted" for="customSwitchSuccess">بخاطر سپردن من</label>
                                        </div>
                                    </div><!--end col-->
                                    <div class="col-sm-6 text-right">
                                        <a href="auth-recover-pw.html" class="text-muted font-13"><i class="dripicons-lock"></i> فراموش کردن کلمه عبور</a>
                                    </div><!--end col-->
                                </div><!--end form-group-->

                                <div class="form-group mb-0 row">
                                    <div class="col-12 mt-2">
                                        <button class="btn btn-primary btn-round btn-block waves-effect waves-light" type="submit"><i class="fas fa-sign-in-alt ml-1"></i> ورود </button>
                                    </div><!--end col-->
                                </div> <!--end form-group-->
                            </form><!--end form-->
                        </div><!--end /div-->

                    </div><!--end card-body-->
                </div><!--end card-->

            </div><!--end auth-page-->
        </div><!--end col-->
    </div><!--end row-->
    <!-- End Log In page -->
    <!-- jQuery  -->


</body>
</html>
