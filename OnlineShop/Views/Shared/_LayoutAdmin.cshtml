    <script src="~/Admin/plugins/bootstrap/js/bootstrap.bundle.js"></script>
    <!-- Sparkline -->
    <script src="~/Admin/plugins/sparkline/jquery.sparkline.js"></script>
    <!-- datepicker -->
    <script src="~/Admin/plugins/datepicker/bootstrap-datepicker.js"></script>
    <!-- Slimscroll -->
    <script src="~/Admin/plugins/slimScroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="~/Admin/plugins/fastclick/fastclick.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Admin/dist/js/adminlte.min.js"></script>

    <!-- DataTables -->
    <script src="~/Admin/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/Admin/plugins/datatables/dataTables.bootstrap4.js"></script>

    <script src="~/Admin/dist/js/sweetalert2.all.min.js"></script>


    <script src="~/Admin/plugins/ckeditor/ckeditor.js"></script>
<!-- Bootstrap WYSIHTML5 -->
